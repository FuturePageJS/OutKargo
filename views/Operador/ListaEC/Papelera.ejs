<%- include('../../layouts/headerOperador'); -%>
<div class="main-cards">
    <button  data-toggle="modal" data-target="#exampleModal" >
        <div class="card">
            <div class="card-inner">
            <p class="text-blue">Crear lista de chequeo</p>
            <span class="material-icons-outlined text-blue">drive_eta</span>
            </div>
        </div>
    </button>
    <a href="/Operador/ListaEC/">
        <div class="card">
            <div class="card-inner">
            <p class="text-blue">Activos</p>
            <span class="material-icons-outlined text-blue">visibility</span>
            </div>
        </div>
    </a>
</div>
<br>
<table class="table table-striped table-hover"  name="ListaEC" id="ListaEC">
  <thead class="table-dark">
    <tr>
      <th scope="col">No.<br>Montacargas </th>
      <th scope="col">Marca </th>
      <th scope="col">Serial</th>
      <th scope="col">Fecha</th>
      <th scope="col">Operador</th>
      <th scope="col">Turno</th>
      <th scope="col">Centro de trabajo</th>
      <th scope="col">Seccion</th>
      <th scope="col">Horometro</th>
      <th scope="col">Estado</th>
      <th scope="col">Mantenimiento</th>
      <th scope="col" >Acci√≥nes</th>
    </tr>
  </thead>
  <tbody class="table table-light ">
      <% listaec.forEach((listaec)=> { %>
          <% if(listaec.Mantenimiento <= 2){   %>
              <% if(listaec.Estado == '2'){   %>
                  <tr>
                      <th scope="col">
                          <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                              <% if(ID_Montacargas.ID == listaec.ID_Montacargas){   %>
                                  <%= ID_Montacargas.Numero %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                              <% if(ID_Montacargas.ID == listaec.ID_Montacargas){   %>
                                  <%= ID_Montacargas.Marca %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                              <% if(ID_Montacargas.ID == listaec.ID_Montacargas){   %>
                                  <%= ID_Montacargas.Serie %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <%= listaec.Fecha %> 
                      </th>
                      <th scope="col">
                          <% operador.forEach((operador)=> { %>
                              <% if(operador.ID == listaec.ID_Operador){   %>
                                  <%= operador.Nombre1 %> <%= operador.Nombre2 %> <%= operador.Apellido1 %> <%= operador.Apellido2 %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <%= listaec.Turno %> 
                      </th>
                      <th scope="col">
                          <% CentrosT.forEach((CentrosT)=> { %>
                              <% if(CentrosT.ID == listaec.ID_CentrosT){   %>
                                  <%= CentrosT.Nombre %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <% SeccionesT.forEach((SeccionesT)=> { %>
                              <% if(SeccionesT.ID == listaec.ID_SeccionesT){   %>
                                  <%= SeccionesT.Nombre %>
                              <% } %> 
                          <% }) %> 
                      </th>
                      <th scope="col">
                          <%= listaec.HorometroF %>
                      </th>
                      <th>
                          <% if (listaec.EstadoV == 1){%> <p >Verificado.</p> <% } %> 
                          <% if (listaec.EstadoV == 2){%> <p >Sin verificar.</p> <% } %> 
                      </th>
                      <th>
                          <% if (listaec.Mantenimiento == 1){%> <p >Mantenimiento Realizado.</p> <% } %> 
                          <% if (listaec.Mantenimiento == 2){%> <p >Necesita Mantenimiento.</p> <% } %> 
                      </th>
                      <th><a href="Ver/<%= listaec.ID %> " class="btn btn-outline-success btn-sm">VER</a></th>
                  </tr>
              <% } %>
          <% } %>
       <% }) %> 
  </tbody>
</table>
<%- include('../../layouts/FooterOperador'); -%>