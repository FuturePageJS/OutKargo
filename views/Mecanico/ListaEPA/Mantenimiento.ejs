<%- include('../../layouts/headerMecanico'); -%>
<div class="main-title">
    <p class="font-weight-bold">ELÉCTRICA, CONTRABALANCEADA</p>
  </div>
<table class="table table-striped table-hover" name="ListaEC" id="ListaEC">
    <thead class="table-dark">
      <tr>
        <th scope="col">No.<br>Montacargas </th>
        <th scope="col">Marca </th>
        <th scope="col">Serial</th>
        <th scope="col">Fecha lista</th>
        <th scope="col">Operador</th>
        <th scope="col">Turno</th>
        <th scope="col">Centro de trabajo</th>
        <th scope="col">Seccion</th>
        <th scope="col">Horometro</th>
        <th scope="col">Estado</th>
        <th scope="col">Mantenimiento</th>
        <th scope="col">Acciónes</th>
      </tr>
    </thead>
    <tbody class="table table-light">
        <% mantenimientoc.forEach((mantenimientoc)=> { %>
            <% if(listaepa.ID == mantenimientoc.ID_Lista) %> 
            <tr>
                <th>
                    <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                        <% if (mantenimientoc.ID_Montacargas == ID_Montacargas.ID) { %>
                             <%= ID_Montacargas.Numero %> 
                        <% } %>
                    <% }) %>
                </th>
                 <th>
                    <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                        <% if (mantenimientoc.ID_Montacargas == ID_Montacargas.ID) { %>
                             <%= ID_Montacargas.Marca %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% ID_Montacargas.forEach((ID_Montacargas)=> { %>
                        <% if (mantenimientoc.ID_Montacargas == ID_Montacargas.ID) { %>
                             <%= ID_Montacargas.Serie %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% listaepa.forEach((listaepa)=> { %>
                        <% if (mantenimientoc.ID_Lista == listaepa.ID) { %>
                             <%= listaepa.Fecha %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% operador.forEach((operador)=> { %>
                        <% if (mantenimientoc.ID_Operador == operador.ID) { %>
                             <%= operador.Nombre1 %> <%= operador.Nombre2 %> <%= operador.Apellido1 %> <%= operador.Apellido2 %>   
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% listaepa.forEach((listaepa)=> { %>
                        <% if (mantenimientoc.ID_Lista == listaepa.ID) { %>
                            <% if (listaepa.Turno == 1){%>6:00 A.M - 2:00 P.M<% } %> 
                            <% if (listaepa.Turno == 2){%>2:00 P.M - 10:00 P.M.<% } %> 
                            <% if (listaepa.Turno == 3){%>10:00 P.M - 6:00 A.M<% } %> 
                            <% if (listaepa.Turno == 4){%>6:30 A.M - 4:30 P.M<% } %> 
                            <% if (listaepa.Turno == 5){%>8:00 A.M - 5:00 P.M<% } %> 
                            <% if (listaepa.Turno == 6){%>7:00 A.M - 5:00 P.M<% } %> 
                        <% } %>
                    <% }) %>
                </th>
                 <th>
                    <% CentrosT.forEach((CentrosT)=> { %>
                        <% if (mantenimientoc.ID_Centro == CentrosT.ID) { %>
                             <%= CentrosT.Nombre %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% SeccionesT.forEach((SeccionesT)=> { %>
                        <% if (mantenimientoc.ID_Seccion == SeccionesT.ID) { %>
                             <%= SeccionesT.Nombre %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% listaepa.forEach((listaepa)=> { %>
                        <% if (mantenimientoc.ID_Lista == listaepa.ID) { %>
                             <%= listaepa.HorometroF %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% listaepa.forEach((listaepa)=> { %>
                        <% if (mantenimientoc.ID_Lista == listaepa.ID) { %>
                            <% if (listaepa.EstadoV == 1){%>Verificado.<% } %> 
                            <% if (listaepa.EstadoV == 2){%>Sin Verificar.<% } %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <% listaepa.forEach((listaepa)=> { %>
                        <% if (mantenimientoc.ID_Lista == listaepa.ID) { %>
                            <% if (listaepa.Mantenimiento == 1){%>Realizado.<% } %> 
                            <% if (listaepa.Mantenimiento == 2){%>Necesita Mantenimiento.<% } %> 
                        <% } %>
                    <% }) %>
                </th>
                <th>
                    <a href="Ver/<%= mantenimientoc.ID %>" class="btn btn-outline-success btn-sm">VER</a>
                </th>
            </tr>
        <% }) %>
    </tbody>
  </table>
<%- include('../../layouts/FooterMecanico'); -%>