<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="icon" href="/img/FAVICON.ico"/>
  </head>
  <body>

    <div class="login-box">
      <img src="/img/Logotipo.png" class="avatar" alt="Avatar Image">
      <h1>OUTKARGO</h1>
      <form method="POST" action="/Login/Validar">
        <!-- USERNAME INPUT -->
        <label for="username">Documento:</label>
        <input type="number" name="email" placeholder="Ingrese su numero de documento" required>
        <!-- PASSWORD INPUT -->
        <label for="password">Contraseña</label>
        <input type="password" name="clave" placeholder="Ingrese su cotraseña" required>
        <input type="submit" value="Ingresar">
      </form>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert != "undefined")  { %>
      <script>
      Swal.fire({
        title:'<%= alertTitle %>',
        text:'<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: true,
        timer: false
      }).then(()=>{
        window.location='/<%= ruta %>'
      })
      </script>
    <% } %>
  </body>
</html>