<%- include('../../layouts/headerAdministrador'); -%>
<h3>Editar Seccion</h3>
<% if (seccionest) { %>
  <form action="Update" method="POST">
    <div class="form-group">
      <label for="recipient-name" class="col-form-label">Nombre:</label>
      <input type="text" class="form-control" id="Nombre" name="Nombre" value="<%= seccionest[0].Nombre %>" required>   
      <input type="hidden" name="Estado" id="Estado" value="1">
      <input type="hidden" name="ID" id="ID" value="<%= seccionest[0].ID%>">
    </div>
    <div class="form-group">
      <label for="recipient-name" class="col-form-label">Centro de trabajo:</label>
      <% seccionest.forEach((seccionest)=> { %>
        <% if (seccionest.Estado == 1) { %>
          <% if (centros) {%> 
            <input type="text" class="form-control" placeholder="<%= centros[0].Nombre%>" disabled>
            <input type="hidden" class="form-control" name="ID_CentrosT" id="ID_CentrosT" value="<%= seccionest.ID_CentrosT %>">
          <% } %>
        <% } %>
      <% }) %> 
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-success">Continuar.</button>
  </div>
  </form>
<% } %>
<%- include('../../layouts/FooterAdministrador'); -%>  